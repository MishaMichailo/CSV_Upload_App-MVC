@model IEnumerable<PersonInformation>
@{
    var errorMessage = TempData["ErrorMessage"] as string;
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">
        @errorMessage
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success">
        @successMessage
    </div>
}

<div class="">
    <form method="post" enctype="multipart/form-data" asp-action="UploadCsv">
        <input type="file" name="file" required />
        <button class="buttonSubmit" type="submit">Upload CSV</button>
    </form>
</div>

@if (TempData["Success"] != null)
{
    <p style="color:green">@TempData["Success"]</p>
}

@if (TempData["Error"] != null)
{
    <p style="color:red">@TempData["Error"]</p>
}
<div>
    <label for="categoryFilter">Filter by category:</label>
    <select id="categoryFilter">
        <option value="all">All</option>
        <option value="true">married</option>
        <option value="false">Unmarried</option>
    </select>
</div>
<table id="contactsTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Married</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.DateOfBirth.ToShortDateString()</td>
                <td>@contact.Married</td>
                <td>@contact.Phone</td>
                <td>@contact.Salary</td>
                <td>
                    <button class="editButton" onclick="openEditModal(@contact.Id, '@contact.Name', '@contact.DateOfBirth.ToString("yyyy-MM-dd")', @(contact.Married.ToString().ToLower()), '@contact.Phone', @contact.Salary)">Edit</button>
                    <button onclick="deleteContact(@contact.Id)">Delete</button>
                </td>
            </tr>


        }
    </tbody>
</table>
<div id="editModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeEditModal()">&times;</span>
        <h2>Edit Contact</h2>
        <input type="hidden" id="editId">
        <label>Name:</label>
        <input type="text" id="editName"><br>
        <label>Date of Birth:</label>
        <input type="date" id="editDateOfBirth"><br>
        <label>Married:</label>
        <input type="checkbox" id="editMarried"><br>
        <label>Phone:</label>
        <input type="text" id="editPhone"><br>
        <label>Salary:</label>
        <input type="number" id="editSalary"><br>
        <button onclick="saveEdit()">Save</button>
    </div>
</div>
<div class="pagination">
    <a href="#" id="prevPage" class="pagination-btn">Previous</a>
    <span id="pageInfo" class="page-info">Page 1 of 1</span>
    <a href="#" id="nextPage" class="pagination-btn">Next</a>
</div>